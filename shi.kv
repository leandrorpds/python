BoxLayout:
    id:main_box
    canvas:
        Color:
            rgba:(0.1,0.1,0.1,1)
        Rectangle:
            size:self.size
            pos:self.pos

    orientation:'vertical'

    Appbar:
    Menu:
        id:menu_id

    ScreenManager:
        id:ScreenControl
        Screen:
            name:'t1'
            BoxLayout:
                orientation:'vertical'
                MenuCogs:
                    id:spc
                Lcd:
                    id:lcd_menu
                Teclado:
                Teclado2:
                Teclado3:
                Teclado4:
        Screen
            name:'t2'
            ScrollView:
                BoxLayout:
                    id:id_box
                    size_hint_y:None
                    height: self.minimum_height
                    orientation:'vertical'
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo
                    Histo

<Histo@Label>
    size_hint_y: None
    height:"100dp"
    text:"TESTE LABEL"


<Appbar@BoxLayout>:
    padding:'6dp'
    canvas:
        Color:
            rgba:(0.86,0,0.35,1)
        Rectangle:
            size:self.size
            pos:self.pos
    size_hint_y:None
    # ALTURA BARRA 01
    height:'60dp'
    Label:
        text:'Controle Produção'
        bold:True
        font_size:'20dp'
        haling:'left'
        text_size:self.size
        valign:'center'
        padding_x:'20dp'
    Imags:
        source:'imgs/logo_font_200.png'
        allow_stretch: True
        size_hint_x: None
        width: '100dp'
        keep_ratio: True

<Menu@BoxLayout>

    canvas:
        Color:
            rgba:(0.86,0,0.35,1)
        Rectangle:
            size:self.size
            pos:self.pos
    padding:'0dp'
    spacing:'50dp'
    size_hint_y:None
    height: '50dp'

    MenuButton:
        id: bt_pesagem
        text:'Pesagem'
        active:True
        #on_release: app.root.ids.ScreenControl.current = "t1"
        on_release: app.chang_screen("t1")
    MenuButton:
        id: bt_historico
        text:'Historico'
        #on_release: app.root.ids.ScreenControl.current = "t2"
        on_release: app.chang_screen("t2")
<MenuCogs@BoxLayout>
    canvas:
        Color:
            rgba:(0.86,0,0.35,1)
        Rectangle:
            size:self.size
            pos:self.pos
    padding:'0dp'
    spacing:'10dp'
    size_hint_y:None
    height: '50dp'

    MenuButton:
        id:menu_branco
        text:'Branco'
        active:True
        on_release: app.select_categoria("branco")
    MenuButton:
        id: menu_porto
        text:'Porto'
        active:False
        on_release: app.select_categoria("porto")
    MenuButton:
        id: menu_shimofury
        active:False
        text:'Shimofury'
        on_release: app.select_categoria("shimofury")
    MenuButton:
        id: menu_salmao
        active:False
        text:'Salmão'
        on_release: app.select_categoria("salmao")

<MenuButton@Button>:
    active: False
    canvas:
        Color:
            rgba:1,1,1,1
        Line:
            width: 2 if root.active else 0.1
            points: self.x , self.y, self.x+self.width, self.y
    background_color:0,0,0,0
    bold:True
    color: (1,1,1,1) if root.active else (1,1,1,0.5)

<Teclado@BoxLayout>
    BoxLayout:
        CalcButton:
            text:'7'
            on_release: app.add_nums(7)
        CalcButton:
            text:'8'
            on_release: app.add_nums(8)
        CalcButton:
            text:'9'
            on_release: app.add_nums(9)
<Teclado2@BoxLayout>
    BoxLayout:
        CalcButton:
            text:'4'
            on_release: app.add_nums(4)
        CalcButton:
            text:'5'
            on_release: app.add_nums(5)
        CalcButton:
            text:'6'
            on_release: app.add_nums(6)
<Teclado3@BoxLayout>
    BoxLayout:
        CalcButton:
            text:'1'
            on_release: app.add_nums(1)
        CalcButton:
            text:'2'
            on_release: app.add_nums(2)
        CalcButton:
            text:'3'
            on_release: app.add_nums(3)

<Teclado4@BoxLayout>
    BoxLayout:
        CalcButton:
            text:'0'
            on_release:app.add_nums(0)
        CalcButton:
            text:'ENVIAR'
            on_release:app.envia_peso()
        CalcButton:
            text:'X'
            on_release:app.apagar_nums()

<Lcd@BoxLayout>
    canvas:
        Color:
            rgba:(0.86,0,0.35,1)
        Rectangle:
            size:self.size
            pos:self.pos
    Label:
        id:lcd_screen
        text: app.digs_inp
        color: 0,1,0.35,1
        font_size: '52'


<Icon@Button>
    size_hint_x:None
    width:self.height
    border:0,0,0,0

<CalcButton@Button>
    #border:1,1,1,1
    font_size: '32'
    bold: True
    background_normal: ''
    background_color: 237/100 , 13/250, 109/250, 1


<Imags@Image>
    border:0,0,0,0